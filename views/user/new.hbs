<div class="row col-md-12">
    <div class="col-md-6 ">
        <hr class="col-md-6">
        <h2>Nuevo Producto</h2>
        <hr class="col-md-6">

        <form action="/new" method="post">
            <div class="form-group">
                <label class="col-xs-3 control-label">Categoría</label>
                <div class="col-xs-5 selectContainer">
                    <select type="text" id="categor" name="categor"  class="form-control" required name="categor">
                        <option value="">seleccione una categoría</option>
                        <option value="m">Mujer </option>
                        <option value="h">Hombre </option>
                        <option value="n">Niño </option>
                    </select>
                </div>
            </div>
                <div class="form-group">
                <label for="title" >Nombre de producto </label>
                <input type="text" id="title" name="title"  class="form-control" required name="title">
            </div>
            <div class="form-group">
                <label for="description" >Descripción de producto</label>
                <input type="text" id="description" name="description" class="form-control" required name="descripction">
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label">Talla</label>
                <div class="col-xs-5 selectContainer">
                    <select type="text" id="talla" name="talla"  class="form-control" required name="talla">
                        <option value="">seleccione una talla</option>
                        <option value="25">25 </option>
                        <option value="26">26 </option>
                        <option value="27">27 </option>
                        <option value="28">28 </option>
                        <option value="29">29 </option>
                        <option value="30">30 </option>
                        <option value="31">31 </option>
                        <option value="32">32 </option>
                        <option value="33">33 </option>
                        <option value="34">34 </option>
                        <option value="35">35 </option>
                        <option value="36">36 </option>
                        <option value="37">37 </option>
                        <option value="38">38 </option>
                        <option value="39">39 </option>
                        <option value="40">40 </option>
                        <option value="41">41 </option>
                        <option value="42">42 </option>
                        <option value="43">43 </option>
                        <option value="44">44 </option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="image" >Imagen de producto</label>
                <input type="text" id="imagen" name="imagen" class="form-control" required name="imagen">
            </div>

            <div class="form-group">
                <label for="title" >Precio de producto</label>
                <input type="number" id="price" name="price"  class="form-control" required name="price">
            </div>
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button type="submit" class="btn btn-primary">Guardar Producto</button>
        </form>
    </div>
</div>