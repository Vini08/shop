{{# if products}}
    <div class="row"  >
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 col-md-offset-3 col-sm-offset-3 ">
            <h1><span class="badge badge-info">Artículos en Carro de Compras</span></h1>
            <ul class="list-group">
                {{# each products}}
                    <li class="list-group-item">
                        <strong><span class="badge badge-dark">{{this.item.title}}</span></strong>
                        <span class="badge badge-success">Q{{this.price}}</span>
                        <span class="badge badge-secondary">Unidades {{this.qty}}</span>
                        <div class="btn-group">
                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Opciones <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <a class="nav-link" href="/reduce/{{this.item._id}}">Reducir 1 Unidad</a>
                                <li role="separator" class="divider"></li>
                                <a class="nav-link" href="/remove/{{this.item._id}}">Eliminar Artículo</a>
                            </ul>
                        </div>
                    </li>
                {{/each}}

            </ul>
        </div>
    </div>
    <hr class="col-md-12">
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 col-md-offset-3 col-sm-offset-3 ">
            <strong>Total compra Q{{ totalPrice}}</strong>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-6 ">
            <a href='/checkout' type="button" class="btn btn-info">Realizar Compra</a>
        </div>
    </div>
    {{else}}
    <div class="row">
        <div class="col-md-12">
            <hr class="col-md-6">
            <h2>No hay artículos en Carro de Compras</h2>
            <hr class="col-md-6">
        </div>
    </div>
{{/if}}
