<div class="row col-md-12">
    <div class="col-md-6 ">
        <hr class="col-md-6">
        <h2>Editar Producto</h2>
        <hr class="col-md-6">
        <form action="{{action}}" method="post">
            <div class="form-group">
                <label for="title" >Nombre de producto </label>
                {{# product}}
                    <input type="text" id="title" value="{{this.title}}"  class="form-control" required name="title">
                {{/ product}}
                </div>
                <div class="form-group">
                <label for="description" >Descripci√≥n de producto</label>
                {{# product}}
                    <input type="text" id="description" value="{{this.description}}"  class="form-control" required name="description">
                {{/ product}}
                </div>
                <div class="form-group">
                <label for="talla" >Talla de producto</label>
                {{# product}}
                    <input type="text" id="talla" value="{{this.sizex}}"  class="form-control" required name="talla">
                {{/ product}}
                </div>
                <div class="form-group">
                <label for="imagen" >Imagen de producto</label>
                {{# product}}
                    <input type="text" id="imagen" value="{{this.imagePath}}"  class="form-control" required name="imagen">
                {{/ product}}
                </div>
            <div class="form-group">
                <label for="price" >Precio de producto</label>
                {{# product}}
                    <input type="text" id="price" value="{{this.price}}"  class="form-control" required name="price">
                {{/ product}}
            </div>
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button id = "clickme"  type="submit" class="btn btn-primary">Editar Producto</button>
            <div id = "alert_placeholder"></div>
        </form>
    </div>
</div>